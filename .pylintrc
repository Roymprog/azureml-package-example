[MESSAGES CONTROL]

# Disabled messages separated by commas.
disable=
    bad-continuation,
    invalid-name,
    logging-fstring-interpolation,
    logging-format-interpolation,
    too-few-public-methods,
    duplicate-code,
    missing-module-docstring,
    wrong-import-order, # Handled by isort.
    fixme,
    attribute-defined-outside-init, # That's just how sklearn rolls.
    no-self-use, # No self use doesn't always make a static method.
    import-error

[DESIGN]

# Maximum number of arguments for function / method
max-args=8

# Maximum number of locals for function / method body
max-locals=15

[TYPECHECK]

ignored-modules=

ignored-classes=
    pandas.core.indexes.datetimes.DatetimeIndex

[VARIABLES]

# List of additional names supposed to be defined in builtins. Remember that
# you should avoid defining new builtins when possible.
additional-builtins=dbutils,spark
